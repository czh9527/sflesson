{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc",
            "command": "E:\\mingw-w64\\mingw64\\bin\\gcc.exe",
            "args": [
                "-g",
                "-fexec-charset=GBK",   // 令mingw按GBK编码生成exe文件
				"-finput-charset=UTF-8",
                "${file}"
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}